# Kalshi API
KALSHI_API_KEY_ID=your_key_id
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi_private_key.pem
KALSHI_API_BASE_URL=https://api.elections.kalshi.com
KALSHI_WS_URL=wss://api.elections.kalshi.com/trade-api/ws/v2
# Use demo for testing:
# KALSHI_API_BASE_URL=https://demo-api.kalshi.co
# KALSHI_WS_URL=wss://demo-api.kalshi.co/trade-api/ws/v2

# Postgres / TimescaleDB
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kalshi_alpha
POSTGRES_USER=kalshi
POSTGRES_PASSWORD=your_password
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
HEALTH_CHECK_INTERVAL=30
ALERT_COOLDOWN=300

# Tuning
TRADE_WRITER_BATCH_SIZE=100
TRADE_WRITER_FLUSH_INTERVAL=5
ORDERBOOK_SNAPSHOT_INTERVAL=60
MARKET_SCAN_INTERVAL=300
WS_PING_INTERVAL=30
WS_PONG_TIMEOUT=10
WS_RECONNECT_MAX_DELAY=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
